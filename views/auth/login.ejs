<% if (errors) {%>
  <% errors.forEach(function (error) { %>
    <%= __(error) %>
  <% }) %>
<% } %>
<div class="login-form">
  <h1>
    Endava Open Administration Login
  </h1>
  <form role="form" action="/auth/local" method="post">
    <div class="form-group">
      <label for="identifier" class="control-label">Username Or Email</label>
      <input type="text" class="form-control" name="identifier" id="identifier" placeholder="Username or Email">
    </div>
    <div class="form-group">
      <label for="password" class="control-label">Password</label>
      <input type="password" class="form-control" name="password" id="password" placeholder="Password">
    </div>
    <button type="submit" class="btn btn-default">Sign in</button>
  </form>
</div>
<% if (providers.length) {%>
  <h4>You can also use one of these...</h4>

  <% Object.keys(providers).forEach(function (key) { %>
    <a href="/auth/<%= providers[key].slug %>" role="button"><%= providers[key].name %></a>
  <% }) %>
<% } %>
